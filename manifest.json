{
  "manifest_version": 2,

  "name": "Squire",
  "description": "This extension is a custom voice command application for Google Chrome",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },  
  "icons": {"16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
            },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+J"
      },
      "description": "test1"
    },
    "Activate Microphone": {
      "suggested_key": {
        "default": "Ctrl+B",
        "windows": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Activate the microphone"
    }
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "http://*/",
    "https://*/"
  ]
}
